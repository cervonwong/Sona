<fx:root styleClass="anchor-pane" type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@../../../../../../css/global/color/color_palette.css" />
      <URL value="@../../../../../../css/global/color/light_theme_colors.css" />
      <URL value="@../../../../../../css/global/design/design.css" />
      <URL value="@../../../../../../css/global/fonts/all_fonts.css" />
      <URL value="@../../../../../../css/global/fonts/type_scale.css" />
      <URL value="@../../../../../../css/specific/custom_nodes/main/destinations/decks/decks_view_pane/decks_view_card.css" />
   </stylesheets>
   <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="8.0">
                     <children>
                        <Label fx:id="deckNameLabel" styleClass="body-1" text="DECK_NAME" />
                        <HBox spacing="8.0">
                           <children>
                              <HBox fx:id="dueBox" spacing="4.0">
                                 <children>
                                    <Label fx:id="dueLabelLabel" styleClass="caption" text="Due:" />
                                    <Label fx:id="dueCountLabel" styleClass="caption" text="0" />
                                 </children>
                              </HBox>
                              <HBox fx:id="newBox" spacing="4.0">
                                 <children>
                                    <Label fx:id="newLabelLabel" styleClass="caption" text="New:" />
                                    <Label fx:id="newCountLabel" styleClass="caption" text="0" />
                                 </children>
                              </HBox>
                              <HBox fx:id="seenBox" spacing="4.0">
                                 <children>
                                    <Label fx:id="seenLabelLabel" styleClass="caption" text="Seen:" />
                                    <Label fx:id="seenCountLabel" styleClass="caption" text="0" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </HBox>
            <AnchorPane>
               <children>
                  <Button fx:id="actionButton" mnemonicParsing="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
         </children>
      </StackPane>
   </children>
</fx:root>
